{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2018",
            "es5"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "./dist",
        "pretty": true,
        "paths": {
            "*": [
                "node_modules/@types/*"
            ]
        },
        "plugins": [
            {
                "name": "typescript-tslint-plugin"
            }
        ],
        "removeComments": false,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": ["src/**/*.ts"]
}
